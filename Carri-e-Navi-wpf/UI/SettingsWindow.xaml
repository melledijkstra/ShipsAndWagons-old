<Window x:Class="Carri_e_Navi_wpf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carri_e_Navi_wpf"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="300" Style="{StaticResource BorderlessWindowStyle}" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="../images/backgrounds/dashboard_background.png"></ImageBrush>
    </Window.Background>
    <Grid>
        <Label x:Name="label" Content="Settings Screen" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,46,0,0"/>
        <Button x:Name="btnClose" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="20" Margin="18,16,0,0" Click="BtnClose_OnClick" >
            <Image Source="../images/icons/close_icon.png"></Image>
        </Button>
        <Label x:Name="label1" Content="Player Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="51,96,0,0" FontSize="13"/>
        <TextBox x:Name="textBox" DataContext="{Binding Path=Player.Name}" HorizontalAlignment="Left" Height="23" Margin="142,96,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" GotFocus="TextBox_OnGotFocus"/>

    </Grid>
</Window>
